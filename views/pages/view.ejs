<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <title>Personal Note Taker</title>
</head>

<body>
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Personal Note Taker</h1>
        </div>
    </div>
    <div class="container">
        <% notes.forEach(note => { %>
        <div class="form-group">
            <label for="title">Title:</label>
            <p><%= note.title %></p>
        </div>
        <div class="form-group">
            <label for="editor">Note:</label>
            <div>
                <%- note.description%>
            </div>
        </div>   
        <input type="text" id="email" placeholder="123@gmail.com" required>
        <button type="button" class="btn btn-secondary" onclick="sendMail()">Share via e-mail</button>
        <script>
            function sendMail()
            {
                var email = document.getElementById("email").value;
                var subject = "TEST";
                var message = "http://localhost:8080/share/"+"<%=note._id%>?";
                document.location.href = "mailto:"+email+"?subject="+ encodeURIComponent(subject)+ "&body=" + encodeURIComponent(message);
            }
         </script>
    </div> 
         <%}) %>   
</body>
</html>